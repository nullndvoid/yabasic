/* LAYOUT */

body {
  color: #fff;
  background-color: #35383a;
  font-family: monospace;
  font-size: 125%;
  line-height: 1.5;
  max-width: 45rem;
  padding: 1rem;
  margin: 0 auto;
  /* margin: 0 0 100px; */
  /* bottom = footer height */
  /* padding: 25px; */
}

a {
  text-decoration: none;
  color: rgb(156, 138, 138);

}

a:hover {
  color: rgb(255, 255, 255);
}

.content {
  margin-bottom: 2rem;
  width: auto;
}

.footer-text {
  color: #ccc;
  font-size: 0.9rem;
}

/* NAVIGATION */

.site-nav {
  display: flex;
}

.site-nav a {
  display: block;
  padding: 1rem;
}

.site-nav .logo {
  font-weight: bold;
  padding-left: 0;
}

.main-menu {
  display: flex;
  list-style: none;
  margin: 0;
  padding: 0;
}

@media screen and (max-width: 48rem) {
  .site-nav,
  .main-menu {
    flex-direction: column;
  }

  .site-nav a {
    padding: 0.5rem;
    padding-left: 0;
  }
}

/* LISTS */

.post-snippet {
  margin-bottom: 1rem;
}

.post-snippet h3 {
  margin-bottom: 0.25rem;
}


html {
    position: relative;
    min-height: 100%;
}
